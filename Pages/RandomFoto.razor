@page "/foto"
<PageTitle>Random Foto</PageTitle>
<div class="row">
    <div class="col">
        <h1>Random Foto</h1>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="card" @onload="GenerateFoto">
            <div class="card-header">
                Random foto
            </div>
            <div class="card-body text-center">
                <img src="@imgSource" id="foto">
                <br>
                <button0 id="btnRandom" class="btn btn-primary mt-2" @onclick="DisplayFoto">Random foto</button0>
                <div id="logging"></div>
            </div>
        </div>
    </div>
</div>


