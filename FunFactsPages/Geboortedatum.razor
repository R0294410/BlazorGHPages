@page "/geboortedatum"
@inject ILocalStorageService Storage
@inject NavigationManager Navigation

<PageTitle>Geboortedatum</PageTitle>
<h3>Geboortedatum</h3>
<div class="container">
    <div class="row">
        <div class="col-md-4">

            <form name="frmLeeftijd">
                <div class="row ">
                    <div class="col-auto mb-3">
                        <label for="geboortedatum">Je geboortedatum</label>
                        <input type="date" id="geboortedatum" @bind="DateOfBirth" min="1970-01-01" max="@CurrentDate">
                    </div>
                </div>
                <div class="row ">
                    <div class="col-auto mb-3">
                        <button class="btn btn-primary btn-lg  mb-2" id="check" type="button" @onclick="StoreDateBirth">
                            Check FunFacts
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
